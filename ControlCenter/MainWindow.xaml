<Window x:Class="ControlCenter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ControlCenter"        
        mc:Ignorable="d"
        Title="AMR Control System"
        Width="1200" Height="800">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <!-- 전체 레이아웃 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="180"/>
        </Grid.RowDefinitions>

        <!-- ===================== -->
        <!-- Robot List (LEFT)     -->
        <!-- ===================== -->
        <Border Grid.Column="0"
                BorderBrush="Gray"
                BorderThickness="1"
                Padding="8">
            <StackPanel>
                <TextBlock Text="Robot List"
                           FontWeight="Bold"
                           Margin="0,0,0,8"/>

                <ListBox ItemsSource="{Binding server.ConnectedClient}"
                          SelectedItem="{Binding SelectedRobot, Mode=TwoWay}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="2">
                                <Ellipse Width="10" Height="10" Fill="LimeGreen" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding IP_ID}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
            </StackPanel>
        </Border>
        <StackPanel Grid.Column="0" VerticalAlignment="Bottom" Margin="10">
            <Button Content="서버 활성화"
            Width="150" Height="40"
            Click="OnStartServer"/>

            <Button Content="클라이언트 접속시도"
            Width="150" Height="40"
            Margin="0,15,0,0" 
            Click="OnConnectClient"/>

            <Button Content="경로 탐색"
            Width="150" Height="40"
            Margin="0,15,0,0"
            Click="StartPathFind"/>
        </StackPanel>
        <!-- ===================== -->
        <!-- Map Area (CENTER)     -->
        <!-- ===================== -->
        <Border Grid.Column="1"
                BorderBrush="Gray"
                BorderThickness="1"
                Margin="5">

            <!-- 중앙 정렬용 -->
            <Grid HorizontalAlignment="Center"
                  VerticalAlignment="Center">

                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">

                    <Canvas Background="White"
                            Width="900"
                            Height="900">

                        <ItemsControl ItemsSource="{Binding Nodes}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                    <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Rectangle Width="30" Height="30"
                   Stroke="Black"
                   StrokeThickness="0.5"
                   MouseLeftButtonDown="OnNodeClicked">
                                        <Rectangle.Style>
                                            <Style TargetType="Rectangle">
                                                <Setter Property="Fill" Value="White"/>

                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Type}" Value="START">
                                                        <Setter Property="Fill" Value="Green"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="GOAL">
                                                        <Setter Property="Fill" Value="Red"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="OBSTACLE">
                                                        <Setter Property="Fill" Value="Black"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="OPEN">
                                                        <Setter Property="Fill" Value="Yellow"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="CLOSE">
                                                        <Setter Property="Fill" Value="Blue"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="PATH">
                                                        <Setter Property="Fill" Value="Magenta"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="EMPTY">
                                                        <Setter Property="Fill" Value="White"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Type}" Value="ROBOT">
                                                        <Setter Property="Fill" Value="Maroon"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Rectangle.Style>
                                    </Rectangle>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </Canvas>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- ===================== -->
        <!-- Log (BOTTOM)          -->
        <!-- ===================== -->
        <Border Grid.Row="1"
        Grid.ColumnSpan="2"
        BorderBrush="Gray"
        BorderThickness="1"
        Padding="8">
            <Grid>
                <ListBox x:Name="LogListBox"
                 ItemsSource="{Binding LogMessages}"
                 FontFamily="Consolas"
                 FontSize="12"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                </ListBox>
            </Grid>
        </Border>

    </Grid>
</Window>
